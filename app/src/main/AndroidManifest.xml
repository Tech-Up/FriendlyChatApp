<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.techup.android.friedlychatapp">

  <uses-permission android:name="android.permission.INTERNET"/>

  <application
      android:name=".MyApplication"
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:supportsRtl="true"
      android:theme="@style/AppTheme">
    <activity
        android:name=".activities.MainActivity"
        android:theme="@style/AppTheme.NoActionBar">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
        android:name=".activities.LoginActivity"
        android:label="@string/log_in">
    </activity>
    <activity
        android:name=".activities.RegisterActivity"
        android:label="@string/register">
    </activity>
    <activity
        android:name=".activities.ForgotPasswordActivity"
        android:label="@string/title_activity_forgot_password">
    </activity>
    <activity
        android:name=".activities.HomeActivity"
        android:label="@string/app_name">
    </activity>
    <activity
        android:name=".activities.ChatRoomActivity"
        android:label="@string/chat_room">
    </activity>

    <activity
        android:name="com.facebook.FacebookActivity"
        android:configChanges=
            "keyboard|keyboardHidden|screenLayout|screenSize|orientation"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Translucent.NoTitleBar"/>

    <!-- [START firebase_service] -->
    <service
        android:name=".receivers.FriendlyChatMessagingSystem">
      <intent-filter>
        <action android:name="com.google.firebase.MESSAGING_EVENT"/>
      </intent-filter>
    </service>
    <!-- [END firebase_service] -->
    <!-- [START firebase_iid_service] -->
    <service
        android:name=".services.FriendlyChatInstanceIDService">
      <intent-filter>
        <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
      </intent-filter>
    </service>

    <meta-data
        android:name="com.facebook.sdk.ApplicationId"
        android:value="@string/facebook_app_id"/>

  </application>

</manifest>